<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/signInCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:src="@drawable/ccchat_svgrepo_com" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:drawableEnd="@drawable/baseline_alternate_email_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="12dp"
                android:hint="Email" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:maxLength="20"
                android:drawableEnd="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Name" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textWebPassword"
                android:drawableEnd="@drawable/baseline_key_24"
                android:textColor="@color/purple"
                android:drawablePadding="8dp"
                android:hint="Password" />

            <EditText
                android:id="@+id/passwordRepeatEditText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textWebPassword"
                android:drawableEnd="@drawable/baseline_key_24"
                android:textColor="@color/purple"
                android:drawablePadding="8dp"
                android:hint="Confirm Password" />

            <androidx.cardview.widget.CardView
                android:id="@+id/signUpButtonCardView"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/signUpButton"
                    android:layout_width="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Sign Up"
                    android:textSize="18sp"
                    android:background="@color/purple"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/signInButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:text="Tap to Sign In"
                android:textColor="@color/teal_700"
                android:textStyle="italic" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>